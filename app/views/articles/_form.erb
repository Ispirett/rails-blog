<div>
  <%= form_for(@article) do |f| %>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
        <li> <%= error %></li>
      <%end %>
    </ul>
    <p><%= f.label :title %>  </p>
    <p><%= f.text_field :title %>  </p>

    <p><%= f.label :body %>  </p>
    <p><%= f.text_area :body %>  </p>

    <p>
      <%= f.label :tag_list %>
      <%= f.text_field :tag_list %>
    </p>

    <p>
      <%= f.submit 'Create Post' %>
    </p>
  <%end %>
</div>